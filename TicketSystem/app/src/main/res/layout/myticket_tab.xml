<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:fillViewport="false"
    android:id="@+id/mytickettab"
    tools:context=".MainActivity"
    android:background="@drawable/background4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ticket"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Search Exist Ticket"
            android:gravity="center"
            android:textSize="20dp"
            android:textStyle="bold"
            />

        <EditText
            android:id="@+id/myticket_pnrnumber"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:hint="PNR Number"
            android:background="#fffff0"
            android:textSize="20dp"
            android:textAlignment="center"
           android:layout_gravity="center"
            android:layout_marginTop="10dp"
            />

        <EditText
            android:id="@+id/myticket_name_surname"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:hint="Surname"
            android:layout_marginTop="10dp"
            android:background="#fffff0"
            android:textSize="20dp"
            android:textAlignment="center"
            android:layout_gravity="center"
            />

        <Button
            android:id="@+id/mytickettab_search_button"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:text="Search"
            android:textColor="#ffff"
            android:layout_marginTop="35dp"
            android:background="#38394C"
            android:layout_gravity="center"
            />

       <TextView
           android:textSize="20dp"
           android:textStyle="bold"
           android:layout_marginTop="30dp"
           android:id="@+id/myticket_textView"
           android:layout_width="match_parent"
           android:layout_height="wrap_content" />

    </LinearLayout>
</LinearLayout>