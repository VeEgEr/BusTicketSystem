<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background4">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/login"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        />

    <TextView
        android:textSize="35dp"
        android:text="LOGIN"
        android:textColor="#fffff0"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/login_email_dit"
        android:background="#fffff0"
        android:layout_marginTop="60dp"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:hint="E-mail"
        android:layout_gravity="center"
        android:textAlignment="center"
        />
    <EditText
        android:inputType="textPassword"
        android:id="@+id/login_password_dit"
        android:layout_marginTop="10dp"
        android:background="#fffff0"
        android:layout_gravity="center"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:hint="Password"
        android:textAlignment="center"
        />

    <Button
        android:onClick="loginForUser"
        android:id="@+id/login_button"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:text="Login"
        android:textColor="#ffff"
        android:layout_marginTop="35dp"
        android:background="#38394C"
        android:layout_gravity="center"
        />

    <TextView
        android:id="@+id/goRegister_login_textView"
        android:layout_marginTop="10dp"
        android:clickable="true"
        android:textColor="#1C0D01"
        android:onClick="goRegisterFromLogin"
        android:textSize="18dp"
        android:text="Click to get an account."
        android:textStyle="italic"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        />

</LinearLayout>